<% if (book) { %>
    <div class="book-detail">
        <div class="book-header">
            <h1 class="book-title">
                <%= book.title %>
            </h1>
            <div class="book-author">
                by <%= book.authors && book.authors.length> 0 ? book.authors.map(author => `${author.firstName}
                    ${author.lastName}`).join(', ') : 'Unknown Author' %>
            </div>
        </div>

        <div class="book-content">
            <div class="book-grid">
                <div class="book-cover-large">
                    <%= book.title.charAt(0).toUpperCase() %>
                </div>

                <div class="book-info-section">
                    <% if (book.description) { %>
                        <h3>Description</h3>
                        <p class="book-description">
                            <%= book.description %>
                        </p>
                        <% } %>

                            <div class="book-details-grid">
                                <% if (book.price) { %>
                                    <div class="detail-item">
                                        <div class="detail-label">Price</div>
                                        <div class="detail-value price-highlight">$<%= book.price.toFixed(2) %>
                                        </div>
                                    </div>
                                    <% } %>

                                        <% if (book.pages) { %>
                                            <div class="detail-item">
                                                <div class="detail-label">Pages</div>
                                                <div class="detail-value">
                                                    <%= book.pages %>
                                                </div>
                                            </div>
                                            <% } %>

                                                <% if (book.publisher) { %>
                                                    <div class="detail-item">
                                                        <div class="detail-label">Publisher</div>
                                                        <div class="detail-value">
                                                            <%= book.publisher %>
                                                        </div>
                                                    </div>
                                                    <% } %>

                                                        <% if (book.publishedDate) { %>
                                                            <div class="detail-item">
                                                                <div class="detail-label">Published</div>
                                                                <div class="detail-value">
                                                                    <%= new
                                                                        Date(book.publishedDate).toLocaleDateString('en-US',
                                                                        { year: 'numeric' , month: 'long' ,
                                                                        day: 'numeric' }) %>
                                                                </div>
                                                            </div>
                                                            <% } %>
                            </div>
                </div>
            </div>

            <% if (book.reviews && book.reviews.length> 0) { %>
                <div class="rating-section">
                    <div class="rating-header">
                        <h3>Customer Reviews (<%= book.reviews.length %>)</h3>
                        <div class="stars">
                            <% const avgRating=book.reviews.reduce((sum, review)=> sum + review.rate, 0) /
                                book.reviews.length; %>
                                <% for (let i=1; i <=5; i++) { %>
                                    <% if (i <=Math.floor(avgRating)) { %>★<% } else if (i - 0.5 <=avgRating) { %>☆<% }
                                                else { %>☆<% } %>
                                                    <% } %>
                                                        <span style="color: #2c3e50; margin-left: 10px;">
                                                            <%= avgRating.toFixed(1) %> out of 5
                                                        </span>
                        </div>
                    </div>
                </div>

                <div class="reviews-section">
                    <h3>Recent Reviews</h3>
                    <% book.reviews.forEach(review=> { %>
                        <div class="review-card">
                            <div class="review-header">
                                <div class="reviewer-name">
                                    <%= review.reviewerName %>
                                </div>
                                <div class="review-date">
                                    <%= new Date(review.reviewDate).toLocaleDateString() %>
                                </div>
                            </div>
                            <div class="review-rating">
                                <% for (let i=1; i <=5; i++) { %>
                                    <% if (i <=review.rate) { %>★<% } else { %>☆<% } %>
                                                <% } %>
                            </div>
                            <% if (review.comment) { %>
                                <div class="review-comment">
                                    <%= review.comment %>
                                </div>
                                <% } %>
                        </div>
                        <% }); %>
                </div>
                <% } else { %>
                    <div class="no-reviews">
                        <p>No reviews yet. Be the first to review this book!</p>
                    </div>
                    <% } %>
        </div>
    </div>
    <% } else { %>
        <div class="error-message">
            <h2>Book Not Found</h2>
            <p>The book you're looking for doesn't exist or has been removed.</p>
        </div>
        <% } %>